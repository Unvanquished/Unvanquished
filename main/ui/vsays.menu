#include "ui/menudef.h"

#define VSAY_MENU( NAME, X, Y, L, W ) \
  menuDef \
  { \
    name NAME \
    visible MENU_FALSE \
    fullscreen MENU_FALSE \
    rect X Y W L \
    focusColor 1 .2 1 1 \
    aspectBias ALIGN_LEFT \
    style WINDOW_STYLE_FILLED \
    border WINDOW_BORDER_FULL \
 \
    itemDef \
    { \
      name window \
      rect -50 0 (W+100) L \
      style WINDOW_STYLE_SHADER \
      background "ui/assets/vertgrad.tga" \
      forecolor MENU_TEAL_TRANS \
      visible MENU_TRUE \
      decoration \
 \
      border WINDOW_BORDER_KCGRADIENT \
      borderSize 1.0 \
      borderColor 1 1 1 1 \
    }
#define VSAY_MENU_END }
#define VSAY_ITEM( TEXT, KEY, ACTION, X, Y, POS ) \
	itemDef \
	{ \
		name "pos" TEXT \
		style WINDOW_STYLE_EMPTY \
		rect (X+10) (Y+40+(25*POS)) 20 25 \
		type ITEM_TYPE_TEXT \
		text #KEY "." \
		textstyle ITEM_TEXTSTYLE_SHADOWED \
		textscale .375 \f
		visible MENU_TRUE \
		decoration \
	} \
	itemDef \
	{ \
		name "pos" TEXT \
		style WINDOW_STYLE_EMPTY \
		rect (X+30) (Y+40+(25*POS)) 230 25 \
		type ITEM_TYPE_TEXT \
		text TEXT \
		textstyle ITEM_TEXTSTYLE_SHADOWED \
		textscale .5 \
		visible MENU_TRUE \
		decoration \
	} \
	onKEY KEY { ACTION }

