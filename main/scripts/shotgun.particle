      displacement 3 0 0 ~0.0

      parentVelocityFraction 1.0


      velocityType      cent
      velocityDir       linear
      velocityMagnitude 40
      velocity          -1 0 0 0

      accelerationType      static
      accelerationDir       linear
      accelerationMagnitude 0
      acceleration          0 0 0 0

      radius 0 12.0 8.0
      alpha  0 1.0 0.0
      rotation 0 ~360 -
      bounce 0.0

      lifeTime 40
    }

    count 1
    delay 0
    period 0 - ~0%
  }
