selector
{	
	condition alertedToEnemy
	{
		action fight
	}
	
	condition team == TEAM_HUMANS
	{
		selector
		{
			action equip
			
			condition percentHealth < 1.0 || !haveUpgrade( UP_MEDKIT )
			{
				action heal
			}
			
			action roamInRadius( E_H_REACTOR, 500 )
		}
	}

	condition team == TEAM_ALIENS
	{
		selector
		{
			condition percentHealth < 1.0
			{
				action heal
			}
			action evolve
			action roamInRadius( E_A_OVERMIND, 500 )
		}
	}
}