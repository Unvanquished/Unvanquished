
/* ##### Stripey data-grids ##### */

datagridbody{
	overflow-y: auto;
}

datagridcell{
	padding:0.2em;
}

datagridheader{
	margin-top: 1em;
}

/* Alternate colours of each row */
datagridrow:nth-child(even) {
	background-color: #333333;
}
datagridrow:nth-child(odd) {
	background-color: #222222;
}

datagridrow:hover{
	background-color:#666666;
}

datagridrow:selected{
	background-color:#136D67;   /* Dark cyan */
}
